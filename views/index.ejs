<%- include('headers/header.index.ejs')%>

<body>
    <div class="container">
    <div class="row nav">
        <div class="col-1 offset-11"><button class="btn btn-secondary" id="logout">logout</button></div>
    </div>
    <div class="row main">
        <p class="title_budget">Presupuestos</p>
        <div class="col-3 mb-3 offset-10"><button class="btn btn-primary" id="newBudget">Crear nuevo</button></div>
        <div class="col-3 dataUser">
            <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Usuario</h5>
                  <p id="nameUser" class="card-text"></p>
                </div>
                <ul class="list-group list-group-flush">
                  <li id="gmailUser" class="list-group-item"></li>
                  <li id="phone" class="list-group-item"></li>
                </ul>
                <br><br>
                <div class="card-body">
                     <button type="button" class="btn btn-secondary  mb-2" data-bs-toggle="modal" data-bs-target="#exampleModal">Cambiar password</button>
                    <button type="button" class="btn btn-secondary">Solicitar baja</button>
                </div>
              </div>
        </div>
        <div class="col-9 dataBudget">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">id</th>
                    <th scope="col">Fecha de creacion</th>
                    <th scope="col">Proyecto</th>
                    <th scope="col">Version</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody id="tableBody">
                  
                </tbody>
              </table>
              
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Cambio de contraseña</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label class="form-label">Nueva contraseña</label>
            <input type="password" class="form-control" id="pass1" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Nueva contraseña</label>
            <input type="password" class="form-control" id="pass2" required>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" id="changePass" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
<br>
